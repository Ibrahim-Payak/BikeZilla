
@{
    ViewData["Title"] = "View";
}

@model BikeZilla.Models.ViewModel.BikeViewModel;
@using BikeZilla.Extension;

<br />

<h2 class="text-info">Bike Details</h2>


<br />

<form>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Makes"></label>
        </div>
        <div class="col-4">
            <select disabled asp-for="Bike.MakeId" asp-items="Model.Makes.ToSelectListItems()" class="form-control" id="Make"></select>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Models"></label>
        </div>
        <div class="col-4">
            <select disabled asp-for="Bike.ModelId" asp-items="Model.Models.ToSelectListItems()" class="form-control" id="Model"></select>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Bike.Year"></label>
        </div>
        <div class="col-4">
            <input disabled asp-for="Bike.Year" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Bike.Mileage"></label>
        </div>
        <div class="col-4">
            <input disabled asp-for="Bike.Mileage" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Bike.Price"></label>
        </div>
        <div class="col-4">
            <input disabled asp-for="Bike.Price" class="form-control" />
        </div>

        <div class="col-1">
            <label asp-for="Bike.Currency"></label>
        </div>
        <div class="col-3">
            <select disabled asp-for="Bike.Currency" asp-items="Model.Currencies.ToSelectListItems()" class="form-control"></select>
         </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Bike.Features"></label>
        </div>
        <div class="col-4">
            <textarea disabled asp-for="Bike.Features" class="form-control"></textarea>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Bike.SellarName"></label>
        </div>
        <div class="col-4">
            <input disabled asp-for="Bike.SellarName" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Bike.SellarEmail"></label>
        </div>
        <div class="col-4">
            <input disabled asp-for="Bike.SellarEmail" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Bike.SellerPhone"></label>
        </div>
        <div class="col-4">
            <input disabled asp-for="Bike.SellerPhone" class="form-control" />
        </div>
    </div>

    <br />

    <div>
        <a asp-action="index" class="btn btn-success">Back</a>
    </div>
</form>

