@model BikeZilla.Models.ViewModel.ModelViewModel;
@using BikeZilla.Extension;

@{
    ViewData["Title"] = "Model Edit Page";
}

<br />

<h2 class="text-info">Update Model of Vehicle</h2>

<form method="post" action="Edit">
    <input hidden asp-for="Model.Id" />
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Makes"></label>
        </div>
        <div class="col-4">
            <select asp-for="Model.MakeId" asp-items="Model.Makes.ToSelectListItems()" class="form-control"></select>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Model"></label>
        </div>
        <div class="col-4">
            <input asp-for="Model.Name" />
        </div>
    </div>
    <br />
    <div class="form-group">
        <button type="submit" class="btn btn-primary" asp-route-id="@Model.Model.Id">Update</button>
        <a asp-action="index" class="btn btn-success">Back</a>
    </div>
</form>