
@{
    ViewData["Title"] = "Index";
    ViewData["Controller"] = "Model";
    ViewData["Action"] = "Index";
}

@model cloudscribe.Pagination.Models.PagedResult<Model>;

<br />
<br />


<div class="row">
    <div class="col-6">
        <h2 class="text-info">Models of Vehicle</h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-info" asp-action="Create"><i class="fa-sharp fa-solid fa-motorcycle"></i> &nbsp; Add New Model</a>
    </div>

    <br />

    <div class="col-12">
        <table class="table table-striped border">
            <tr class="table-info">
                <th>Make</th>
                <th>Name</th>
                <th></th>
            </tr>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@Html.DisplayFor(m => item.Make.Name)</td>
                    <td>@Html.DisplayFor(m => item.Name)</td>
                    <partial name="_TableButtonPartial" model="@item.Id" />

                </tr>
            }
        </table>

        <partial name="_Pagination" view-data="ViewData" model="Model" />
    </div>
</div>

