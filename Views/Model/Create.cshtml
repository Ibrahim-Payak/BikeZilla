
@{
    ViewData["Title"] = "Create";
}

@model BikeZilla.Models.ViewModel.ModelViewModel;
@using BikeZilla.Extension;

<br />

<h2 class="text-info">Add Model of Vehicle</h2>

@*here method is post since we r going to post data to server and action is Create
    asp-for auto. find property name in model class  *@
<form method="post" action="Create">
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Makes"></label>
        </div>
        <div class="col-4">
            @*here we wanted values in dropdown (using select)*@
            @*need to save MakeID as foreign key in model table*@
            @*select list we cann't use IEnumerable, need to change to selectlistitem*@
            <select asp-for="Model.MakeId" asp-items="Model.Makes.ToSelectListItems()" class="form-control"></select>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Model.Name"></label>
        </div>
        <div class="col-4">
            <input asp-for="Model.Name" class="form-control"/>
        </div>
    </div>
    
    <br />

    <div>
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="index" class="btn btn-success">Back</a>
    </div>
</form>

